<Window x:Class="DiReCTUI.Views.SigninWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Title="Sign in" Height="250" Width="400">
    <Grid Name="SigninGrid" >
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Name" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="1" Margin="50,0,0,0" />
        <TextBox Name="NameTextbox" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Grid.Row="2" Width="200" Text="User"/>
        <TextBlock Text="Password" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="3" Margin="50,0,0,0" />
        <PasswordBox Name="PasswordTextbox" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Top" Width="200"/>
        <Button Name="SigninButton" Content="Sign in"  Grid.Row="5"  Width="100" Height="25" Click="SigninButton_Click" />
        
    </Grid>
    
</Window>
